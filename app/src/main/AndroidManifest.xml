<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="idv.ron.spots">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD4buAUaOURlGaut2cpeEbY6m2kynHxIAg" />

        <activity
            android:name="idv.ron.spots.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="idv.ron.spots.news.NewsActivity"
            android:label="@string/title_NewsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".spot.SpotListActivity"
            android:label="@string/title_SpotListActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="idv.ron.spots.spot.SpotDetailActivity"
            android:label="@string/title_SpotDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".spot.SpotInsertActivity"
            android:label="@string/title_SpotInsertActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".spot.SpotUpdateActivity"
            android:label="@string/title_SpotUpdateActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>
